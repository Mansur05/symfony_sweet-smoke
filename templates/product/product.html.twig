{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <div class="pr-4">
            <img src="{{ asset('src/products/' ~ product.thumbnail) }}" alt="" width="200px">
        </div>
        <div class="d-flex flex-column">
            <h1>{{ product.name }} - <strong>$ {{  product.price / 100 }}</strong></h1>
            <p>{{ product.description }}</p>
            <div class="flex-fill"></div>
            <span class="text-muted">{{ product.arrivedAt|date('Y-m-d') }}</span>
        </div>
    </div>
</div>
{% endblock %}